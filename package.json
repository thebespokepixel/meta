{
  "name": "@thebespokepixel/meta",
  "version": "0.2.2",
  "description": "Extract package metadata with consistent presentation",
  "main": "index.js",
  "module": "index.mjs",
  "scripts": {
    "test": "xo && nyc ava",
    "doc-serve": "documentation serve --watch --github --config src/docs/documentation.yml --project-name $npm_package_name  --project-version $npm_package_version src/index.js",
    "doc-build": "documentation build --format html --output docs --github --config src/docs/documentation.yml --project-name $npm_package_name  --project-version $npm_package_version src/index.js",
    "readme": "compile-readme -u src/docs/example.md src/docs/readme.md > readme.md",
    "coverage": "nyc ava && nyc report --reporter=lcov --report-dir test/coverage; open test/coverage/lcov-report/index.html",
    "clean": "gulp clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarkGriffiths/meta.git"
  },
  "files": [
    "index.js",
    "index.mjs"
  ],
  "keywords": [
    "metadata",
    "package",
    "pkg",
    "version"
  ],
  "author": "Mark Griffiths <mark@thebespokepixel.com> (http://thebespokepixel.com/)",
  "copyright": {
    "year": "2018",
    "owner": "The Bespoke Pixel"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarkGriffiths/meta/issues"
  },
  "homepage": "https://github.com/MarkGriffiths/meta#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "ava": "^0.25.0",
    "documentation": "^8.0.0",
    "documentation-theme-bespoke": "^0.4.0",
    "gulp": "^4.0.0",
    "gulp-better-rollup": "^3.1.0",
    "gulp-rename": "^1.2.3",
    "gulp-strip-comments": "^2.5.2",
    "nyc": "^12.0.2",
    "rollup-plugin-babel": "^4.0.0-beta.4",
    "xo": "^0.21.1"
  },
  "xo": {
    "semicolon": false,
    "esnext": true,
    "ignores": [
      "index.js",
      "lib/**",
      "docs/**",
      "test/coverage/**"
    ]
  },
  "dependencies": {
    "read-pkg-up": "^4.0.0"
  },
  "badges": {
    "github": "MarkGriffiths",
    "npm": "thebespokepixel",
    "name": "meta",
    "style": "flat",
    "providers": {
      "status": {
        "text": "beta",
        "color": "blue"
      },
      "aux1": {
        "title": "github",
        "text": "source",
        "color": "4E73B6",
        "link": "https://github.com/MarkGriffiths/meta"
      }
    },
    "readme": {
      "Status": [
        [
          "status",
          "npm",
          "travis",
          "david"
        ],
        [
          "code-climate",
          "code-climate-coverage",
          "snyk"
        ]
      ],
      "Developer": [
        "david-dev",
        "rollup"
      ],
      "Help": [
        "inch",
        "gitter"
      ]
    },
    "docs": [
      [
        "aux1",
        "travis"
      ],
      [
        "code-climate",
        "code-climate-coverage"
      ],
      [
        "david"
      ]
    ]
  }
}
